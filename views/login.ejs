<% include ./partials/header %>
<% include ./partials/navbar %>

<div class="container">
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <ul class="collection with-header z-depth-1">
                <li class="collection-header">
                    <div class="header text center">
                        <h4 class="text flow">Login to YelpCamp</h4>
                    </div>
                </li>
                <li class="collection-item">
                    <form class="col s10 m8 offset-s1 offset-m2" action="/login" method="POST">
                        <div class="row">
                            <div class="input-field">
                                <input type="text" id="loginUsername" name="username">
                                <label for="loginUsername">Username</label>
                            </div>
                            <div class="input-field">
                                <input type="password" id="loginPassword" name="password">
                                <label for="loginPassword">Password</label>
                            </div>
                            <div class="text center top-padding-custom">
                                <button class="waves-effect waves-light btn custom right blue darken-1">Login</button>
                                <a href="/" class="left">Back</a>    
                            </div>                
                        </div>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>

<% include ./partials/footer %>