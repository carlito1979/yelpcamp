<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container z-depth-1">

    <div class="row">
        <form class="col s8 offset-s2" action="/campsites/<%= campsite._id %>/comments/<%= comment._id %>/?_method=PUT" method="POST">
            
            <div class="row">
                <div class="header text center">
                    <h3 class="text flow">Edit Comment for <%= campsite.name %></h3>
                </div>
                <div class="input-field">
                    <textarea id="editCommentText" class="materialize-textarea" name="comment[text]"><%= comment.text %></textarea>
                    <label for="editCommentText">Your comment goes here</label>
                </div>
                <div class="text center">
                    <button class="waves-effect waves-light btn right blue darken-1">Update</button>
                    <a href="/campsites/<%= campsite._id %>" class="left">Back</a>    
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>