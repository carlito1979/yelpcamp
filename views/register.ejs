<% include ./partials/header %>
<% include ./partials/navbar %>

<div class="container">

    <div class="row">
        <div class="col s12 m6 offset-m3">
            <ul class="collection with-header z-depth-1">
                <li class="collection-header">
                    <div class="header text center">
                        <h4 class="text flow">Sign Up to YelpCamp</h4>
                    </div>
                </li>
                <li class="collection-item">
                    <form class="col s10 m8 offset-s1 offset-m2" action="/register" method="POST">
                        <div class="row">
                            <div class="input-field">
                                <input type="text" id="registerUsername" name="username">
                                <label for="registerUsername">Enter your username here</label>
                            </div>
                            <div class="input-field">
                                <input type="password" id="registerPassword" name="password">
                                <label for="registerPassword">Enter a password here</label>
                            </div>
                            <!-- Switch -->
                            <div class="switch reveal">
                                <label>
                                    Off
                                    <input type="checkbox" name="adminRole" id="registerAdmin">
                                    <span class="lever"></span>
                                    Admin
                                </label>
                            </div>
                            <div class="input-field reveal-div reveal-div-hidden">
                                <input type="password" id="registerAdminQuestion" name="adminQuestion">
                                <label for="registerAdminQuestion">Enter admin secret phrase</label>
                            </div>
                            <div class="text center top-padding-custom">
                                <button class="waves-effect waves-light btn custom right blue darken-1">Register</button>
                                <a href="/" class="left">Back</a>    
                            </div>                
                        </div>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>

<% include ./partials/footer %>