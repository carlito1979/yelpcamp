<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container z-depth-1">

    <div class="row">
        <form class="col s8 offset-s2" action="/campsites/<%= campsite._id %>/?_method=PUT" method="POST">
            
            <div class="row">
                <div class="header text center">
                    <h3>Edit <%= campsite.name %></h3>
                </div>
                <div class="input-field">
                    <input type="text" id="editCampsiteName" name="campsite[name]" value="<%= campsite.name %>">
                    <label for="editCampsiteName">Camping Site Name</label>
                </div>
                <div class="input-field">
                    <input type="text" id="editCampsiteImage" name="campsite[image]" value="<%= campsite.image %>">
                    <label for="editCampsiteImage">Image URL</label>
                </div>
                <div class="input-field">
                    <input type="text" id="editCampsiteLocation" name="campsite[location][description]" value="<%= campsite.location.description %>">
                    <label for="editCampsiteLocation">Campsite Location</label>
                </div>
                <div class="input-field">
                    <textarea id="editCampsiteDescription" name="campsite[description]" class="materialize-textarea"><%= campsite.description %></textarea>
                    <label for="editCampsiteDescription">Description</label>
                </div>
                <div class="input-field">
                    <input type="number" step="0.01" id="editCampsitePrice" name="campsite[price]" value="<%= campsite.price %>">
                    <label for="editCampsitePrice">Price Per Night</label>
                </div>
                <div class="text center">
                    <button class="waves-effect waves-light btn right blue">Update</button>
                    <a href="/campsites/<%= campsite._id %>" class="left">Back</a>    
                </div>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>